{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "${SHELL:-/bin/bash} -l -c '$CLAUDE_PROJECT_DIR/.claude/hooks/generate-title.sh'",
            "timeout": 10000
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "${SHELL:-/bin/bash} -l -c '$CLAUDE_PROJECT_DIR/.claude/hooks/track-permission.sh'",
            "timeout": 3000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${SHELL:-/bin/bash} -l -c '$CLAUDE_PROJECT_DIR/.claude/hooks/track-tool-use.sh'",
            "timeout": 3000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "${SHELL:-/bin/bash} -l -c '$CLAUDE_PROJECT_DIR/.claude/hooks/generate-summary.sh'",
            "timeout": 3000
          }
        ]
      }
    ]
  }
}